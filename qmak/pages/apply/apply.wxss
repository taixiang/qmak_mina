.apply {
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 30rpx;
}

.name_container, .phone_container, .type_container {
  width: 80%;
  height: 60rpx;
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  border: 1px solid #dfdfdf;
  border-radius: 5px;
    margin-top: 30rpx;

}

.name_txt, .phone_txt, .type_txt {
  width: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.line_v {
  background-color: #dfdfdf;
  height: 30rpx;
  width: 2rpx;
}

.name_input, .phone_input {
  margin-left: 30rpx;
}

.property_container {
  width: 80%;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.radio_group {
  margin-left: 20rpx;
}

.picker_view {
  margin-left: 20rpx;
}

.order_container {
  display: flex;
  width: 80%;
  height: 60rpx;
  margin-top: 30rpx;
  justify-content: center;
  align-items: center;
  background-color: #da0000;
  border-radius: 5px;
  text-align: center;
  color: #fff;
}

.line_view {
  width: 100%;
  height: 2rpx;
  background-color: #dfdfdf;
margin-top: 30rpx
