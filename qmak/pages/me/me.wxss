/* pages/me/me.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip{
  display: flex;
  font-size: 25rpx;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx
}
.line_view {
  height: 2rpx;
  background-color: #dfdfdf;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.list_item{
  display: flex;
  flex-direction: column;
  align-items: center
}
.title_container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center
}
.left_img,.right_img{
  width: 60rpx;
  height: 5rpx;
}
.card_img{
    margin-left: 30rpx;
  width: 80rpx;
  height: 80rpx
}
.right_img{
  margin-left: 30rpx
}
.txt_title{
  font-size: 30rpx
}

.content_container{
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #eee;
  margin-top: 20rpx;

    border-radius: 5px;
}
.l_container{
  display: flex;
  flex-direction: row;
  align-items: center
}
.icon_user{
  width: 30rpx;
  height: 30rpx;
}
.user_name{
  font-size: 28rpx
}
.left_con,.right_con{
  width: 50%;
  display: flex;
  align-items: center
}
.left_con{
  margin-left: 10rpx;
  margin-top: 10rpx
}
.right_con{
  margin-top: 10rpx
}
.iden_con{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  margin-top: 20rpx
}
.icon_iden{
  width: 40rpx;
  height: 30rpx;
}
.icon_phone{
  width: 20rpx;
  height: 32rpx
}

.time{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
    font-size: 28rpx;
    margin-bottom: 20rpx
}
.line_view_bottom {
  width: 100%;
  height: 10rpx;
  background-color: #dfdfdf;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}