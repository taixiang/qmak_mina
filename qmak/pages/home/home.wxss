.home {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.credit_card,.net_platform {
  background-color: #f24166;
  width: 80%;
  height: 233rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
